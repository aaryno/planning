    "## 📊 Step 5: Calculating Comprehensive Statistics\n",
    "\n",
    "Now let's calculate all the statistics properly:"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def calculate_comprehensive_stats(band_data, nodata_value=None):\n",
    "    \"\"\"\n",
    "    Helper function to calculate statistics properly.\n",
    "    This demonstrates the logic your assignment function should use.\n",
    "    \"\"\"\n",
    "    # Handle NoData masking\n",
    "    if nodata_value is not None:\n",
    "        valid_mask = band_data != nodata_value\n",
    "        valid_data = band_data[valid_mask]\n",
    "        nodata_count = np.sum(~valid_mask)  # Count of NoData pixels\n",
    "    else:\n",
    "        valid_data = band_data.flatten()  # All data is valid\n",
    "        nodata_count = 0\n",
    "    \n",
    "    # Check if we have any valid data\n",
    "    if len(valid_data) == 0:\n",
    "        return {\n",
    "            'error': 'No valid data found',\n",
    "            'total_pixels': band_data.size,\n",
    "            'nodata_pixels': nodata_count\n",
    "        }\n",
    "    \n",
    "    # Calculate basic statistics\n",
    "    stats = {\n",
    "        'min': float(np.min(valid_data)),\n",
    "        'max': float(np.max(valid_data)),\n",
    "        'mean': float(np.mean(valid_data)),\n",
    "        'std': float(np.std(valid_data)),\n",
    "        'median': float(np.median(valid_data)),\n",
    "        \n",
    "        # Percentiles for distribution analysis\n",
    "        'percentile_25': float(np.percentile(valid_data, 25)),\n",
    "        'percentile_75': float(np.percentile(valid_data, 75)),\n",
    "        \n",
    "        # Pixel counts\n",
    "        'total_pixels': int(band_data.size),\n",
    "        'valid_pixels': int(len(valid_data)),\n",
    "        'nodata_pixels': int(nodata_count),\n",
    "        'valid_percentage': float(100 * len(valid_data) / band_data.size)\n",
    "    }\n",
    "    \n",
    "    return stats\n",
    "\n",
    "# Test our comprehensive statistics function\n",
    "with rasterio.open(elevation_file) as src:\n",
    "    band_data = src.read(1)\n",
    "    nodata_value = src.nodata\n",
    "    \n",
    "    stats = calculate_comprehensive_stats(band_data, nodata_value)\n",
    "    \n",
    "    print(\"📊 COMPREHENSIVE RASTER STATISTICS\")\n",
    "    print(\"=\" * 50)\n",
    "    \n",
    "    if 'error' not in stats:\n",
    "        print(f\"🎯 VALUE RANGE:\")\n",
    "        print(f\"   Min: {stats['min']:.2f}\")\n",
    "        print(f\"   Max: {stats['max']:.2f}\")\n",
    "        print(f\"   Range: {stats['max'] - stats['min']:.2f}\")\n",
    "        \n",
    "        print(f\"\\n📐 CENTRAL TENDENCY:\")\n",
    "        print(f\"   Mean: {stats['mean']:.2f}\")\n",
    "        print(f\"   Median: {stats['median']:.2f}\")\n",
    "        print(f\"   Std Dev: {stats['std']:.2f}\")\n",
    "        \n",
    "        print(f\"\\n📈 DISTRIBUTION:\")\n",
    "        print(f\"   25th percentile: {stats['percentile_25']:.2f}\")\n",
    "        print(f\"   75th percentile: {stats['percentile_75']:.2f}\")\n",
    "        print(f\"   IQR: {stats['percentile_75'] - stats['percentile_25']:.2f}\")\n",
    "        \n",
    "        print(f\"\\n🔢 DATA QUALITY:\")\n",
    "        print(f\"   Total pixels: {stats['total_pixels']:,}\")\n",
    "        print(f\"   Valid pixels: {stats['valid_pixels']:,} ({stats['valid_percentage']:.1f}%)\")\n",
    "        print(f\"   NoData pixels: {stats['nodata_pixels']:,}\")\n",
    "    else:\n",
    "        print(f\"❌ {stats['error']}\")"
   ]
