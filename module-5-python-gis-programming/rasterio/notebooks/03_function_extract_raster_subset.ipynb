    "    \"\"\"Create a large raster with varied data for subset testing.\"\"\"\n",
    "    \n",
    "    width, height = 200, 200\n",
    "    \n",
    "    # Create complex elevation surface\n",
    "    x = np.linspace(-2, 2, width)\n",
    "    y = np.linspace(-2, 2, height)\n",
    "    X, Y = np.meshgrid(x, y)\n",
    "    \n",
    "    # Multiple terrain features\n",
    "    elevation = (500 + \n",
    "                1000 * np.exp(-(X**2 + Y**2)) +  # Central mountain\n",
    "                500 * np.exp(-((X+0.8)**2 + (Y-0.8)**2)*2) +  # Northeast hill\n",
    "                300 * np.exp(-((X-1.2)**2 + (Y+0.5)**2)*3) +  # Southeast hill\n",
    "                np.random.normal(0, 20, (height, width)))  # Terrain roughness\n",
    "    \n",
    "    # Add water bodies (low elevation areas)\n",
    "    water_mask = (X > 0.5) & (Y < -0.8)  # Lake in southeast\n",
    "    elevation[water_mask] = 100 + np.random.normal(0, 5, np.sum(water_mask))\n",
    "    \n",
    "    # Define large geographic extent\n",
    "    transform = rasterio.transform.from_bounds(\n",
    "        west=-122.0, south=36.0, east=-120.0, north=38.0,\n",
    "        width=width, height=height\n",
    "    )\n",
    "    \n",
    "    # Save the large raster\n",
    "    temp_path = tempfile.mktemp(suffix='_large_terrain.tif')\n",
    "    \n",
    "    with rasterio.open(\n",
    "        temp_path, 'w',\n",
    "        driver='GTiff',\n",
    "        height=height, width=width,\n",
    "        count=1,\n",
    "        dtype=elevation.dtype,\n",
    "        crs='EPSG:4326',\n",
    "        transform=transform,\n",
    "        nodata=-9999,\n",
    "        compress='lzw'  # Compress for efficiency\n",
    "    ) as dst:\n",
    "        dst.write(elevation, 1)\n",
    "    \n",
    "    return temp_path, transform\n",
    "\n",
    "# Create test data\n",
