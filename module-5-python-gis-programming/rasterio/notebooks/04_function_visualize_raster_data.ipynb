    "# Create sample test raster data for visualization\n",
    "print(\"üèóÔ∏è Creating sample test raster data for visualization...\\n\")\n",
    "\n",
    "# Create synthetic multi-band raster data\n",
    "height, width = 300, 400\n",
    "x = np.linspace(-121, -119, width)\n",
    "y = np.linspace(36, 38, height)\n",
    "X, Y = np.meshgrid(x, y)\n",
    "\n",
    "# Create three bands with different characteristics\n",
    "# Band 1: Elevation-like data\n",
    "band1 = (\n",
    "    1000 + \n",
    "    800 * np.sin(X * 5) * np.cos(Y * 3) +\n",
    "    400 * np.exp(-((X + 120)**2 + (Y - 37)**2) * 20) +\n",
    "    np.random.normal(0, 50, (height, width))\n",
    ")\n",
    "\n",
    "# Band 2: Temperature-like data\n",
    "band2 = (\n",
    "    20 + \n",
    "    15 * np.sin(Y * 8) +\n",
    "    10 * np.cos(X * 6) +\n",
    "    np.random.normal(0, 3, (height, width))\n",
    ")\n",
    "\n",
    "# Band 3: Vegetation-like data (NDVI-style)\n",
    "band3 = (\n",
    "    0.5 + \n",
    "    0.3 * np.sin(X * 4) * np.cos(Y * 4) +\n",
    "    0.2 * np.exp(-((X + 120.5)**2 + (Y - 36.5)**2) * 50) +\n",
    "    np.random.normal(0, 0.1, (height, width))\n",
    ")\n",
