    "def demonstrate_windowed_reading():\n",
    "    \"\"\"Demonstrate efficient windowed reading strategies.\"\"\"\n",
    "    \n",
    "    # Define different window sizes for testing\n",
    "    window_configs = [\n",
    "        {'name': 'Small Window (512x512)', 'window': Window(0, 0, 512, 512)},\n",
    "        {'name': 'Medium Window (1024x1024)', 'window': Window(500, 400, 1024, 1024)},\n",
    "        {'name': 'Large Window (1536x1024)', 'window': Window(200, 200, 1536, 1024)}\n",
    "    ]\n",
    "    \n",
    "    # Performance comparison\n",
    "    results = {'cog': {}, 'regular': {}}\n",
    "    \n",
    "    for config in window_configs:\n",
    "        window = config['window']\n",
    "        name = config['name']\n",
    "        \n",
    "        # Test COG file\n",
    "        start_time = time.time()\n",
    "        with rasterio.open(cog_file) as src:\n",
    "            cog_data = src.read(window=window)\n",
    "        cog_time = time.time() - start_time\n",
    "        results['cog'][name] = {'time': cog_time, 'shape': cog_data.shape}\n",
    "        \n",
    "        # Test regular file\n",
    "        start_time = time.time()\n",
    "        with rasterio.open(regular_file) as src:\n",
    "            regular_data = src.read(window=window)\n",
    "        regular_time = time.time() - start_time\n",
    "        results['regular'][name] = {'time': regular_time, 'shape': regular_data.shape}\n",
    "    \n",
    "    return results\n",
    "\n",
    "def test_overview_performance():\n",
    "    \"\"\"Test performance at different overview levels.\"\"\"\n",
    "    overview_results = {}\n",
    "    \n",
    "    with rasterio.open(cog_file) as src:\n",
    "        # Test full resolution\n",
    "        start_time = time.time()\n",
    "        full_res_data = src.read()\n",
    "        full_res_time = time.time() - start_time\n",
    "        overview_results['Full Resolution'] = {\n",
    "            'time': full_res_time,\n",
    "            'shape': full_res_data.shape,\n",
    "            'level': 1\n",
    "        }\n",
    "        \n",
    "        # Test each overview level\n",
    "        for level in src.overviews(1):\n",
    "            start_time = time.time()\n",
    "            overview_data = src.read(out_shape=(\n",
    "                src.count, \n",
    "                src.height // level, \n",
    "                src.width // level\n",
    "            ), resampling=Resampling.average)\n",
    "            overview_time = time.time() - start_time\n",
    "            \n",
    "            overview_results[f'Overview {level}'] = {\n",
    "                'time': overview_time,\n",
    "                'shape': overview_data.shape,\n",
    "                'level': level\n",
    "            }\n",
    "    \n",
    "    return overview_results\n",
    "\n",
    "def calculate_efficiency_metrics(read_time, data_shape, file_size_mb):\n",
    "    \"\"\"Calculate various efficiency metrics.\"\"\"\n",
    "    # Calculate data volume\n",
    "    total_pixels = np.prod(data_shape)\n",
    "    \n",
    "    # Efficiency metrics\n",
    "    metrics = {\n",
    "        'read_time': read_time,\n",
    "        'pixels_per_second': total_pixels / read_time if read_time > 0 else 0,\n",
    "        'mb_per_second': file_size_mb / read_time if read_time > 0 else 0,\n",
    "        'total_pixels': total_pixels,\n",
    "        'efficiency_score': (total_pixels / 1e6) / max(read_time, 0.001)  # Millions of pixels per second\n",
    "    }\n",
    "    \n",
    "    return metrics\n",
    "\n",
    "# Run performance tests\n",
    "print(\"Running windowed reading performance tests...\")\n",
    "windowed_results = demonstrate_windowed_reading()\n",
    "\n",
    "print(\"\\nRunning overview performance tests...\")\n",
    "overview_results = test_overview_performance()\n",
    "\n",
    "# Visualize results\n",
    "plt.figure(figsize=(18, 12))\n",
    "\n",
    "# Windowed reading performance\n",
    "plt.subplot(2, 3, 1)\n",
    "window_names = list(windowed_results['cog'].keys())\n",
    "cog_times = [windowed_results['cog'][name]['time'] for name in window_names]\n",
    "regular_times = [windowed_results['regular'][name]['time'] for name in window_names]\n",
    "\n",
    "x = np.arange(len(window_names))\n",
    "width = 0.35\n",
    "\n",
    "plt.bar(x - width/2, cog_times, width, label='COG File', color='green', alpha=0.7)\n",
    "plt.bar(x + width/2, regular_times, width, label='Regular File', color='red', alpha=0.7)\n",
    "\n",
    "plt.ylabel('Read Time (seconds)')\n",
    "plt.title('Windowed Reading Performance')\n",
