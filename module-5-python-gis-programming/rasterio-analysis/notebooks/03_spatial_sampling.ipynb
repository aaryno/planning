    "plt.colorbar(label='Temperature (°C)')\n",
    "plt.title('Sample Temperature Data')\n",
    "plt.xlabel('Easting (m)')\n",
    "plt.ylabel('Northing (m)')\n",
    "\n",
    "plt.subplot(1, 3, 3)\n",
    "plt.imshow(raster_data['ndvi'], cmap='RdYlGn', extent=extent, origin='upper')\n",
    "plt.colorbar(label='NDVI')\n",
    "plt.title('Sample NDVI Data')\n",
    "plt.xlabel('Easting (m)')\n",
