    "import rasterio\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import matplotlib.colors as colors\n",
    "from matplotlib.patches import Rectangle\n",
    "from skimage import exposure\n",
    "import seaborn as sns\n",
    "from scipy import stats\n",
    "import os\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "def visualize_raster_data(raster_path, bands=None, visualization_type='single', \n",
    "                         color_map='viridis', stretch_type='linear', \n",
    "                         percentile_range=(2, 98), title=None, \n",
    "                         save_path=None, show_statistics=True, \n",
    "                         figure_size=(12, 8)):\n",
    "    \"\"\"\n",
    "    Create comprehensive visualizations of raster data with multiple display options.\n",
    "    \"\"\"\n",
    "    \n",
    "    print(f\"üé® Starting raster visualization...\")\n",
    "    print(f\"   üìÅ Input raster: {os.path.basename(raster_path)}\")\n",
    "    print(f\"   üñºÔ∏è Visualization type: {visualization_type}\")\n",
    "    \n",
    "    # Step 1: Input validation and data loading\n",
    "    if not os.path.exists(raster_path):\n",
    "        raise FileNotFoundError(f\"Raster file not found: {raster_path}\")\n",
    "    \n",
    "    with rasterio.open(raster_path) as src:\n",
    "        # Handle band selection\n",
    "        if bands is None:\n",
    "            bands = [1]  # Default to first band\n",
    "        elif isinstance(bands, int):\n",
    "            bands = [bands]\n",
    "        \n",
    "        # Validate band numbers\n",
    "        for band in bands:\n",
    "            if band < 1 or band > src.count:\n",
    "                raise ValueError(f\"Band {band} not found. Raster has {src.count} bands.\")\n",
    "        \n",
    "        # Read data\n",
    "        if len(bands) == 1:\n",
    "            data = src.read(bands[0])\n",
    "            data_3d = data.reshape(1, *data.shape)\n",
    "        else:\n",
    "            data_3d = src.read(bands)\n",
    "            data = data_3d[0]  # Use first band for statistics\n",
    "        \n",
    "        # Get metadata\n",
    "        profile = src.profile.copy()\n",
    "        bounds = src.bounds\n",
    "        crs = src.crs\n",
    "        nodata = src.nodata\n",
    "        \n",
    "        print(f\"   üìä Raster info:\")\n",
    "        print(f\"     Shape: {data.shape}\")\n",
    "        print(f\"     Bands requested: {bands}\")\n",
    "        print(f\"     CRS: {crs}\")\n",
    "        print(f\"     Bounds: {bounds}\")\n",
    "        print(f\"     NoData: {nodata}\")\n",
    "    \n",
    "    # Step 2: Data preprocessing and masking\n",
    "    # Handle nodata values\n",
    "    if nodata is not None:\n",
    "        data_masked = np.ma.masked_equal(data, nodata)\n",
    "        data_3d_masked = np.ma.masked_equal(data_3d, nodata)\n",
    "    else:\n",
    "        data_masked = np.ma.masked_invalid(data)\n",
    "        data_3d_masked = np.ma.masked_invalid(data_3d)\n",
    "    \n",
    "    # Calculate statistics on valid data\n",
    "    valid_data = data_masked.compressed()\n",
    "    \n",
    "    if len(valid_data) == 0:\n",
    "        raise ValueError(\"No valid data found in raster\")\n",
    "    \n",
    "    data_stats = {\n",
    "        'min': float(np.min(valid_data)),\n",
    "        'max': float(np.max(valid_data)),\n",
    "        'mean': float(np.mean(valid_data)),\n",
    "        'median': float(np.median(valid_data)),\n",
    "        'std': float(np.std(valid_data)),\n",
    "        'count': len(valid_data),\n",
    "        'nodata_count': int(np.ma.count_masked(data_masked)),\n",
    "        'total_pixels': int(data.size)\n",
    "    }\n",
    "    \n",
    "    print(f\"   üìà Data statistics:\")\n",
    "    print(f\"     Range: {data_stats['min']:.2f} - {data_stats['max']:.2f}\")\n",
    "    print(f\"     Mean: {data_stats['mean']:.2f} ¬± {data_stats['std']:.2f}\")\n",
    "    print(f\"     Valid pixels: {data_stats['count']:,} ({100*data_stats['count']/data_stats['total_pixels']:.1f}%)\")\n",
    "    \n",
    "    # Step 3: Apply data stretching\n",
    "    print(f\"   üîß Applying {stretch_type} stretch...\")\n",
    "    \n",
    "    if stretch_type == 'linear':\n",
    "        vmin, vmax = data_stats['min'], data_stats['max']\n",
    "        stretched_data = data_masked.copy()\n",
    "        \n",
    "    elif stretch_type == 'percentile':\n",
    "        vmin, vmax = np.percentile(valid_data, percentile_range)\n",
    "        stretched_data = np.clip(data_masked, vmin, vmax)\n",
    "        \n",
    "    elif stretch_type == 'histogram_equalization':\n",
    "        # Apply histogram equalization\n",
    "        stretched_data = exposure.equalize_hist(data_masked.filled(np.nan))\n",
    "        stretched_data = np.ma.masked_invalid(stretched_data)\n",
    "        vmin, vmax = np.nanmin(stretched_data), np.nanmax(stretched_data)\n",
    "        \n",
    "    else:\n",
    "        raise ValueError(f\"Unknown stretch type: {stretch_type}\")\n",
    "    \n",
    "    print(f\"     Stretch range: {vmin:.2f} - {vmax:.2f}\")\n",
    "    \n",
    "    # Step 4: Create visualizations based on type\n",
    "    print(f\"   üé® Creating {visualization_type} visualization...\")\n",
    "    \n",
    "    # Set up the figure based on visualization type\n",
    "    if visualization_type == 'single':\n",
    "        fig, axes = plt.subplots(1, 2 if show_statistics else 1, figsize=figure_size)\n",
    "        if show_statistics and hasattr(axes, '__len__'):\n",
    "            ax_main, ax_hist = axes\n",
    "        else:\n",
    "            ax_main = axes if not hasattr(axes, '__len__') else axes\n",
    "            ax_hist = None\n",
    "            \n",
    "    elif visualization_type == 'multi_band':\n",
    "        n_bands = len(bands)\n",
    "        n_cols = min(3, n_bands)\n",
    "        n_rows = (n_bands + n_cols - 1) // n_cols\n",
    "        fig, axes = plt.subplots(n_rows, n_cols, figsize=figure_size)\n",
    "        if n_bands == 1:\n",
    "            axes = [axes]\n",
    "        elif hasattr(axes, 'flatten'):\n",
    "            axes = axes.flatten()\n",
    "        else:\n",
    "            axes = [axes]\n",
    "            \n",
    "    elif visualization_type == 'comparison':\n",
    "        fig, axes = plt.subplots(2, 2, figsize=figure_size)\n",
    "        axes = axes.flatten()\n",
    "        \n",
    "    elif visualization_type == 'rgb':\n",
    "        if len(bands) < 3:\n",
    "            raise ValueError(\"RGB visualization requires at least 3 bands\")\n",
    "        fig, ax_main = plt.subplots(1, 1, figsize=figure_size)\n",
    "        \n",
    "    else:\n",
    "        raise ValueError(f\"Unknown visualization type: {visualization_type}\")\n",
    "    \n",
    "    # Step 5: Create the actual visualizations\n",
    "    extent = [bounds.left, bounds.right, bounds.bottom, bounds.top]\n",
    "    \n",
    "    if visualization_type == 'single':\n",
    "        # Main raster display\n",
    "        im = ax_main.imshow(stretched_data, cmap=color_map, vmin=vmin, vmax=vmax,\n",
    "                           extent=extent, aspect='auto')\n",
    "        \n",
    "        # Add colorbar\n",
    "        cbar = plt.colorbar(im, ax=ax_main, shrink=0.8)\n",
    "        cbar.set_label('Value', rotation=270, labelpad=20)\n",
    "        \n",
    "        # Set title\n",
    "        plot_title = title or f\"Raster Visualization - Band {bands[0]}\"\n",
    "        ax_main.set_title(plot_title, fontsize=14, fontweight='bold')\n",
    "        ax_main.set_xlabel('Longitude' if crs and crs.is_geographic else 'X')\n",
    "        ax_main.set_ylabel('Latitude' if crs and crs.is_geographic else 'Y')\n",
    "        \n",
    "        # Add statistics text box\n",
    "        if show_statistics:\n",
    "            stats_text = f\"Statistics:\\nMin: {data_stats['min']:.2f}\\nMax: {data_stats['max']:.2f}\\nMean: {data_stats['mean']:.2f}\\nStd: {data_stats['std']:.2f}\"\n",
    "            ax_main.text(0.02, 0.98, stats_text, transform=ax_main.transAxes,\n",
    "                        bbox=dict(boxstyle='round', facecolor='white', alpha=0.8),\n",
    "                        verticalalignment='top', fontsize=10)\n",
    "        \n",
    "        # Create histogram if requested\n",
    "        if ax_hist is not None:\n",
    "            ax_hist.hist(valid_data, bins=50, density=True, alpha=0.7, color='skyblue', edgecolor='black')\n",
    "            ax_hist.axvline(data_stats['mean'], color='red', linestyle='--', label=f\"Mean: {data_stats['mean']:.2f}\")\n",
    "            ax_hist.axvline(data_stats['median'], color='orange', linestyle='--', label=f\"Median: {data_stats['median']:.2f}\")\n",
    "            ax_hist.set_xlabel('Value')\n",
    "            ax_hist.set_ylabel('Density')\n",
    "            ax_hist.set_title('Data Distribution')\n",
    "            ax_hist.legend()\n",
    "            ax_hist.grid(True, alpha=0.3)\n",
    "    \n",
    "    elif visualization_type == 'multi_band':\n",
    "        for i, band_num in enumerate(bands):\n",
    "            if i >= len(axes):\n",
    "                break\n",
    "                \n",
    "            band_data = data_3d_masked[i]\n",
    "            \n",
    "            # Apply same stretching to each band\n",
    "            if stretch_type == 'percentile':\n",
    "                band_valid = band_data.compressed()\n",
    "                if len(band_valid) > 0:\n",
    "                    band_vmin, band_vmax = np.percentile(band_valid, percentile_range)\n",
    "                else:\n",
    "                    band_vmin, band_vmax = 0, 1\n",
    "            else:\n",
    "                band_vmin, band_vmax = vmin, vmax\n",
    "            \n",
    "            im = axes[i].imshow(band_data, cmap=color_map, vmin=band_vmin, vmax=band_vmax,\n",
    "                               extent=extent, aspect='auto')\n",
    "            axes[i].set_title(f'Band {band_num}')\n",
    "            axes[i].set_xlabel('X')\n",
    "            axes[i].set_ylabel('Y')\n",
    "            \n",
    "            # Add colorbar to each subplot\n",
    "            plt.colorbar(im, ax=axes[i], shrink=0.8)\n",
    "        \n",
    "        # Hide unused subplots\n",
    "        for i in range(len(bands), len(axes)):\n",
    "            axes[i].set_visible(False)\n",
    "    \n",
    "    elif visualization_type == 'rgb':\n",
    "        # Create RGB composite\n",
    "        rgb_data = np.dstack([data_3d_masked[i] for i in range(min(3, len(bands)))])\n",
    "        \n",
    "        # Normalize each band to 0-1 range\n",
    "        for i in range(rgb_data.shape[2]):\n",
    "            band = rgb_data[:, :, i]\n",
    "            if np.ma.is_masked(band):\n",
    "                valid_band = band.compressed()\n",
    "            else:\n",
    "                valid_band = band.flatten()\n",
    "                \n",
    "            if len(valid_band) > 0:\n",
    "                band_min, band_max = np.percentile(valid_band, [2, 98])\n",
    "                rgb_data[:, :, i] = np.clip((band - band_min) / (band_max - band_min), 0, 1)\n",
    "        \n",
    "        ax_main.imshow(rgb_data, extent=extent, aspect='auto')\n",
    "        ax_main.set_title(title or f'RGB Composite (Bands {bands[0]}-{bands[1]}-{bands[2]})')\n",
    "        ax_main.set_xlabel('X')\n",
    "        ax_main.set_ylabel('Y')\n",
    "    \n",
    "    elif visualization_type == 'comparison':\n",
    "        # Show different stretching methods\n",
    "        stretch_methods = ['linear', 'percentile', 'histogram_equalization']\n",
    "        \n",
    "        for i, method in enumerate(stretch_methods[:3]):\n",
    "            if method == 'linear':\n",
    "                comp_vmin, comp_vmax = data_stats['min'], data_stats['max']\n",
    "                comp_data = data_masked\n",
    "            elif method == 'percentile':\n",
    "                comp_vmin, comp_vmax = np.percentile(valid_data, percentile_range)\n",
    "                comp_data = np.clip(data_masked, comp_vmin, comp_vmax)\n",
    "            elif method == 'histogram_equalization':\n",
    "                comp_data = exposure.equalize_hist(data_masked.filled(np.nan))\n",
    "                comp_data = np.ma.masked_invalid(comp_data)\n",
    "                comp_vmin, comp_vmax = np.nanmin(comp_data), np.nanmax(comp_data)\n",
    "            \n",
    "            im = axes[i].imshow(comp_data, cmap=color_map, vmin=comp_vmin, vmax=comp_vmax,\n",
    "                               extent=extent, aspect='auto')\n",
    "            axes[i].set_title(f'{method.replace(\"_\", \" \").title()} Stretch')\n",
    "            axes[i].set_xlabel('X')\n",
    "            axes[i].set_ylabel('Y')\n",
    "            plt.colorbar(im, ax=axes[i], shrink=0.8)\n",
    "        \n",
    "        # Add histogram in the fourth subplot\n",
    "        axes[3].hist(valid_data, bins=50, density=True, alpha=0.7, color='skyblue', edgecolor='black')\n",
    "        axes[3].set_xlabel('Value')\n",
    "        axes[3].set_ylabel('Density')\n",
    "        axes[3].set_title('Data Distribution')\n",
    "        axes[3].grid(True, alpha=0.3)\n",
    "    \n",
    "    # Step 6: Final formatting and output\n",
    "    plt.tight_layout()\n",
    "    \n",
    "    # Save if requested\n",
    "    if save_path:\n",
    "        print(f\"   üíæ Saving visualization to: {save_path}\")\n",
    "        plt.savefig(save_path, dpi=300, bbox_inches='tight', facecolor='white')\n",
    "    \n",
    "    plt.show()\n",
    "    \n",
    "    # Step 7: Compile results\n",
    "    results = {\n",
    "        'visualization_successful': True,\n",
    "        'data_statistics': data_stats,\n",
    "        'visualization_parameters': {\n",
    "            'bands': bands,\n",
    "            'visualization_type': visualization_type,\n",
    "            'color_map': color_map,\n",
    "            'stretch_type': stretch_type,\n",
    "            'stretch_range': (vmin, vmax),\n",
    "            'percentile_range': percentile_range\n",
    "        },\n",
    "        'raster_info': {\n",
    "            'shape': data.shape,\n",
    "            'bounds': bounds,\n",
    "            'crs': str(crs),\n",
    "            'nodata': nodata\n",
    "        }\n",
    "    }\n",
    "    \n",
    "    if save_path:\n",
    "        results['output_path'] = save_path\n",
    "        results['output_size_mb'] = os.path.getsize(save_path) / (1024 * 1024)\n",
    "    \n",
    "    print(f\"\\nüéâ Visualization complete!\")\n",
    "    print(f\"   üìä Data range: {data_stats['min']:.2f} - {data_stats['max']:.2f}\")\n",
    "    print(f\"   üé® Applied {stretch_type} stretch\")\n",
    "    print(f\"   üìê Final display range: {vmin:.2f} - {vmax:.2f}\")\n",
    "    \n",
    "    return results"
