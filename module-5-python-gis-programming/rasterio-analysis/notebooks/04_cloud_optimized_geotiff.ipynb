    "def analyze_cog_structure(file_path):\n",
    "    \"\"\"Analyze the internal structure of a GeoTIFF file.\"\"\"\n",
    "    with rasterio.open(file_path) as src:\n",
    "        # Basic file information\n",
    "        info = {\n",
    "            'width': src.width,\n",
    "            'height': src.height,\n",
    "            'count': src.count,\n",
    "            'dtype': src.dtypes[0],\n",
    "            'crs': src.crs,\n",
    "            'transform': src.transform\n",
    "        }\n",
    "        \n",
    "        # COG-specific characteristics\n",
    "        profile = src.profile\n",
    "        info['tiled'] = profile.get('tiled', False)\n",
    "        info['blockxsize'] = profile.get('blockxsize', 'N/A')\n",
    "        info['blockysize'] = profile.get('blockysize', 'N/A')\n",
    "        info['compress'] = profile.get('compress', 'none')\n",
    "        info['interleave'] = profile.get('interleave', 'band')\n",
    "        \n",
    "        # Overview information\n",
    "        overview_count = src.overviews(1)  # Get overviews for first band\n",
    "        info['overview_count'] = len(overview_count)\n",
    "        info['overview_levels'] = overview_count\n",
    "        \n",
    "        # Calculate overview dimensions\n",
    "        overview_dims = []\n",
    "        for level in overview_count:\n",
    "            ov_width = src.width // level\n",
    "            ov_height = src.height // level\n",
    "            overview_dims.append((ov_width, ov_height))\n",
    "        info['overview_dimensions'] = overview_dims\n",
    "        \n",
    "        # COG compliance indicators\n",
    "        info['is_cog_compliant'] = (\n",
    "            info['tiled'] and \n",
    "            info['overview_count'] > 0 and\n",
    "            info['blockxsize'] in [256, 512, 1024] and\n",
    "            info['blockysize'] in [256, 512, 1024]\n",
    "        )\n",
    "        \n",
    "        return info\n",
    "\n",
    "# Analyze both files\n",
    "cog_structure = analyze_cog_structure(cog_file)\n",
