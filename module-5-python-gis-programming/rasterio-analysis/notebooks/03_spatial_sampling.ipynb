    "# Implement buffered sampling\n",
    "def buffered_sampling(raster_array, transform, point_x, point_y, buffer_radius=500):\n",
    "    \"\"\"Sample raster values within a circular buffer around a point.\"\"\"\n",
    "    # Convert point to pixel coordinates\n",
    "    center_row, center_col = rowcol(transform, point_x, point_y)\n",
    "    \n",
    "    # Calculate buffer radius in pixels\n",
    "    pixel_size = abs(transform.a)  # Assuming square pixels\n",
    "    buffer_pixels = int(buffer_radius / pixel_size)\n",
    "    \n",
    "    # Define sampling window\n",
    "    row_min = max(0, int(center_row - buffer_pixels))\n",
    "    row_max = min(raster_array.shape[0], int(center_row + buffer_pixels + 1))\n",
    "    col_min = max(0, int(center_col - buffer_pixels))\n",
    "    col_max = min(raster_array.shape[1], int(center_col + buffer_pixels + 1))\n",
    "    \n",
    "    # Extract window\n",
    "    window = raster_array[row_min:row_max, col_min:col_max]\n",
    "    \n",
    "    # Create coordinate arrays for the window\n",
    "    rows = np.arange(row_min, row_max)\n",
    "    cols = np.arange(col_min, col_max)\n",
    "    row_coords, col_coords = np.meshgrid(rows, cols, indexing='ij')\n",
    "    \n",
    "    # Calculate distances from center\n",
    "    distances = np.sqrt((row_coords - center_row)**2 + (col_coords - center_col)**2)\n",
    "    distance_meters = distances * pixel_size\n",
    "    \n",
    "    # Create circular mask\n",
    "    circular_mask = distance_meters <= buffer_radius\n",
    "    \n",
    "    # Extract values within buffer\n",
    "    buffer_values = window[circular_mask]\n",
    "    buffer_values = buffer_values[np.isfinite(buffer_values)]  # Remove NaN values\n",
    "    \n",
    "    if len(buffer_values) == 0:\n",
    "        return {\n",
    "            'mean': np.nan,\n",
    "            'median': np.nan,\n",
    "            'std': np.nan,\n",
    "            'min': np.nan,\n",
    "            'max': np.nan,\n",
    "            'count': 0,\n",
    "            'percentile_25': np.nan,\n",
    "            'percentile_75': np.nan\n",
    "        }\n",
    "    \n",
    "    return {\n",
    "        'mean': np.mean(buffer_values),\n",
    "        'median': np.median(buffer_values),\n",
    "        'std': np.std(buffer_values),\n",
    "        'min': np.min(buffer_values),\n",
    "        'max': np.max(buffer_values),\n",
    "        'count': len(buffer_values),\n",
    "        'percentile_25': np.percentile(buffer_values, 25),\n",
    "        'percentile_75': np.percentile(buffer_values, 75)\n",
    "    }\n",
    "\n",
    "def multi_band_sampling(raster_dict, transform, points_x, points_y, method='bilinear'):\n",
    "    \"\"\"Sample multiple raster bands at point locations.\"\"\"\n",
    "    results = {}\n",
    "    \n",
    "    for band_name, raster_array in raster_dict.items():\n",
    "        if band_name in ['transform', 'crs', 'extent', 'shape']:  # Skip metadata\n",
    "            continue\n",
    "            \n",
    "        samples = sample_raster_basic(raster_array, transform, points_x, points_y, method)\n",
    "        results[band_name] = samples\n",
    "    \n",
    "    return results\n",
    "\n",
    "# Test buffered sampling on a subset of points\n",
    "test_points = sample_points.iloc[:5].copy()  # Use first 5 points\n",
    "buffer_sizes = [250, 500, 1000]  # Different buffer sizes to test\n",
    "\n",
    "buffered_results = []\n",
    "for idx, point in test_points.iterrows():\n",
    "    point_results = {'point_id': point['point_id'], 'x': point['x_coord'], 'y': point['y_coord']}\n",
    "    \n",
    "    for buffer_size in buffer_sizes:\n",
    "        stats = buffered_sampling(\n",
    "            raster_data['elevation'], raster_data['transform'],\n",
    "            point['x_coord'], point['y_coord'], buffer_radius=buffer_size\n",
    "        )\n",
    "        \n",
    "        # Add buffer size to stat names\n",
    "        for stat_name, value in stats.items():\n",
    "            point_results[f'{stat_name}_{buffer_size}m'] = value\n",
    "    \n",
    "    buffered_results.append(point_results)\n",
    "\n",
    "buffered_df = pd.DataFrame(buffered_results)\n",
    "\n",
    "# Multi-band sampling for all points\n",
    "multiband_results = multi_band_sampling(\n",
    "    raster_data, raster_data['transform'],\n",
    "    sample_points['x_coord'], sample_points['y_coord']\n",
    ")\n",
    "\n",
    "# Visualize buffered sampling\n",
    "plt.figure(figsize=(18, 12))\n",
    "\n",
    "# Show buffers on map\n",
    "plt.subplot(2, 3, 1)\n",
    "plt.imshow(raster_data['elevation'], cmap='terrain', extent=raster_data['extent'], origin='upper')\n",
    "\n",
    "# Draw buffers\n",
    "from matplotlib.patches import Circle\n",
    "for _, point in test_points.iterrows():\n",
    "    for i, buffer_size in enumerate(buffer_sizes):\n",
    "        circle = Circle((point['x_coord'], point['y_coord']), buffer_size, \n",
    "                       fill=False, color=['red', 'blue', 'green'][i], \n",
    "                       linewidth=2, alpha=0.7)\n",
    "        plt.gca().add_patch(circle)\n",
    "    \n",
    "    # Add point\n",
    "    plt.scatter(point['x_coord'], point['y_coord'], c='black', s=100, \n",
    "               marker='x', linewidth=3)\n",
    "\n",
    "plt.colorbar(label='Elevation (m)')\n",
    "plt.title('Buffered Sampling Zones')\n",
    "plt.xlabel('Easting (m)')\n",
    "plt.ylabel('Northing (m)')\n",
    "plt.legend(['250m', '500m', '1000m'], title='Buffer Size')\n",
    "\n",
    "# Compare buffer statistics\n",
    "plt.subplot(2, 3, 2)\n",
    "mean_cols = [col for col in buffered_df.columns if 'mean' in col]\n",
    "buffer_means = buffered_df[mean_cols].values\n",
    "\n",
    "x_pos = np.arange(len(test_points))\n",
    "width = 0.25\n",
    "\n",
    "for i, buffer_size in enumerate(buffer_sizes):\n",
    "    plt.bar(x_pos + i*width, buffer_means[:, i], width, \n",
    "           label=f'{buffer_size}m buffer', alpha=0.8)\n",
    "\n",
    "plt.xlabel('Sample Point')\n",
    "plt.ylabel('Mean Elevation (m)')\n",
    "plt.title('Buffer Size Effect on Mean Values')\n",
    "plt.xticks(x_pos + width, [f'P{i+1}' for i in range(len(test_points))])\n",
    "plt.legend()\n",
    "plt.grid(True, alpha=0.3)\n",
    "\n",
    "# Buffer size vs standard deviation\n",
    "plt.subplot(2, 3, 3)\n",
    "std_cols = [col for col in buffered_df.columns if 'std' in col]\n",
    "buffer_stds = buffered_df[std_cols].values\n",
