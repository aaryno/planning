    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import rasterio\n",
    "from rasterio.windows import Window\n",
    "from rasterio.transform import from_bounds\n",
    "from rasterio.crs import CRS\n",
    "from rasterio.enums import Resampling\n",
    "import tempfile\n",
    "import os\n",
    "from pathlib import Path\n",
    "import time\n",
    "import requests\n",
    "from urllib.parse import urlparse\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "# Create a sample raster that mimics COG characteristics\n",
    "def create_sample_cog_data():\n",
    "    \"\"\"Create sample data that demonstrates COG processing concepts.\"\"\"\n",
    "    # Large raster dimensions to demonstrate efficiency gains\n",
    "    width, height = 2048, 1536\n",
    "    \n",
    "    # Create realistic spatial pattern (satellite-like imagery)\n",
    "    x = np.linspace(-np.pi, np.pi, width)\n",
    "    y = np.linspace(-np.pi, np.pi, height)\n",
    "    X, Y = np.meshgrid(x, y)\n",
    "    \n",
    "    # Simulate multispectral satellite data\n",
    "    # Red band (more variation in urban/vegetation areas)\n",
    "    red_band = (128 + 80 * np.sin(2*X) * np.cos(Y) + \n",
    "                30 * np.sin(5*X + 3*Y) + \n",
    "                20 * np.random.random((height, width))).astype(np.uint8)\n",
    "    \n",
    "    # Green band (smoother variation)\n",
    "    green_band = (120 + 60 * np.cos(X) * np.sin(2*Y) + \n",
    "                  25 * np.cos(3*X) + \n",
    "                  15 * np.random.random((height, width))).astype(np.uint8)\n",
    "    \n",
    "    # Blue band (water/atmospheric effects)\n",
    "    blue_band = (110 + 50 * np.sin(X + Y) + \n",
    "                 20 * np.sin(4*Y) + \n",
    "                 10 * np.random.random((height, width))).astype(np.uint8)\n",
    "    \n",
    "    # Stack bands\n",
    "    rgb_data = np.stack([red_band, green_band, blue_band], axis=0)\n",
    "    \n",
    "    # Define spatial reference\n",
    "    transform = from_bounds(-120, 35, -110, 45, width, height)  # Western US extent\n",
    "    crs = CRS.from_epsg(4326)  # WGS84\n",
    "    \n",
    "    return {\n",
    "        'data': rgb_data,\n",
    "        'transform': transform,\n",
    "        'crs': crs,\n",
    "        'width': width,\n",
    "        'height': height,\n",
    "        'count': 3,\n",
    "        'dtype': rgb_data.dtype\n",
    "    }\n",
    "\n",
    "def create_cog_file(data_dict, output_path, tiled=True, overviews=True):\n",
    "    \"\"\"Create a COG-compliant GeoTIFF file.\"\"\"\n",
    "    # COG creation parameters\n",
    "    profile = {\n",
    "        'driver': 'GTiff',\n",
    "        'height': data_dict['height'],\n",
    "        'width': data_dict['width'],\n",
    "        'count': data_dict['count'],\n",
    "        'dtype': data_dict['dtype'],\n",
    "        'crs': data_dict['crs'],\n",
    "        'transform': data_dict['transform'],\n",
    "        'compress': 'lzw',  # Efficient compression\n",
    "        'interleave': 'pixel'  # Better for visualization\n",
    "    }\n",
    "    \n",
    "    # Add tiling for COG compliance\n",
    "    if tiled:\n",
    "        profile.update({\n",
    "            'tiled': True,\n",
    "            'blockxsize': 512,\n",
    "            'blockysize': 512\n",
    "        })\n",
    "    \n",
    "    # Create the file\n",
    "    with rasterio.open(output_path, 'w', **profile) as dst:\n",
    "        # Write data\n",
    "        dst.write(data_dict['data'])\n",
    "        \n",
    "        # Add overviews for COG compliance\n",
    "        if overviews:\n",
    "            # Calculate overview levels (powers of 2)\n",
    "            overview_levels = []\n",
    "            max_dim = max(data_dict['width'], data_dict['height'])\n",
    "            level = 2\n",
    "            while max_dim // level > 256:  # Don't create overviews smaller than 256px\n",
    "                overview_levels.append(level)\n",
    "                level *= 2\n",
    "            \n",
    "            if overview_levels:\n",
    "                dst.build_overviews(overview_levels, Resampling.average)\n",
    "                dst.update_tags(ns='gdal', OVR_RESAMPLING='AVERAGE')\n",
    "\n",
    "# Create sample data and files\n",
    "sample_data = create_sample_cog_data()\n",
    "\n",
    "# Create temporary files for comparison\n",
    "temp_dir = tempfile.mkdtemp()\n",
    "cog_file = os.path.join(temp_dir, 'sample_cog.tif')\n",
    "regular_file = os.path.join(temp_dir, 'sample_regular.tif')\n",
    "\n",
    "# Create COG-optimized file\n",
    "create_cog_file(sample_data, cog_file, tiled=True, overviews=True)\n",
    "\n",
    "# Create regular (non-optimized) file for comparison\n",
    "create_cog_file(sample_data, regular_file, tiled=False, overviews=False)\n",
    "\n",
    "print(f\"Sample data created:\")\n",
    "print(f\"- Dimensions: {sample_data['height']} x {sample_data['width']} x {sample_data['count']}\")\n",
    "print(f\"- Data type: {sample_data['dtype']}\")\n",
    "print(f\"- COG file: {cog_file}\")\n",
    "print(f\"- Regular file: {regular_file}\")\n",
    "\n",
    "# Compare file sizes\n",
    "cog_size = os.path.getsize(cog_file) / (1024 * 1024)  # MB\n",
    "regular_size = os.path.getsize(regular_file) / (1024 * 1024)  # MB\n",
    "print(f\"\\nFile sizes:\")\n",
    "print(f\"- COG file: {cog_size:.2f} MB\")\n",
    "print(f\"- Regular file: {regular_size:.2f} MB\")\n",
    "print(f\"- Size difference: {((cog_size - regular_size) / regular_size * 100):+.1f}%\")"
   ]
