   "source": [
    "## üíæ Step 8: Saving Subset to New File\n",
    "\n",
    "Learn how to save your subset as a new raster file with proper metadata:"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Save our subset to a new file\n",
    "output_dir = Path('../output')\n",
    "output_dir.mkdir(exist_ok=True)\n",
    "\n",
    "subset_filename = output_dir / 'elevation_subset_example.tif'\n",
    "\n",
    "with rasterio.open(elevation_file) as src:\n",
    "    # Read subset data\n",
    "    subset_data = src.read(1, window=our_window)\n",
    "    \n",
    "    # Calculate subset transform\n",
    "    subset_transform = src.window_transform(our_window)\n",
    "    \n",
    "    # Create metadata for the subset file\n",
    "    subset_profile = src.profile.copy()\n",
    "    subset_profile.update({\n",
    "        'height': subset_data.shape[0],\n",
    "        'width': subset_data.shape[1],\n",
    "        'transform': subset_transform\n",
    "    })\n",
    "    \n",
    "    print(\"üíæ CREATING SUBSET FILE\")\n",
    "    print(\"=\" * 30)\n",
    "    print(f\"Output file: {subset_filename}\")\n",
    "    print(f\"Dimensions: {subset_profile['width']} x {subset_profile['height']}\")\n",
    "    print(f\"CRS: {subset_profile['crs']}\")\n",
    "    print(f\"Data type: {subset_profile['dtype']}\")\n",
    "    \n",
    "    # Write the subset file\n",
    "    with rasterio.open(subset_filename, 'w', **subset_profile) as dst:\n",
    "        dst.write(subset_data, 1)\n",
    "        \n",
    "        # Add some metadata tags\n",
    "        dst.update_tags(\n",
    "            DESCRIPTION='Subset extracted from ' + elevation_file.name,\n",
    "            CREATED_BY='Python rasterio tutorial',\n",
    "            SUBSET_BOUNDS=f'{our_subset_bounds[0]:.6f},{our_subset_bounds[1]:.6f},{our_subset_bounds[2]:.6f},{our_subset_bounds[3]:.6f}'\n",
    "        )\n",
    "    \n",
    "    print(f\"‚úÖ Subset saved successfully!\")\n",
    "    \n",
    "    # Verify the saved file\n",
    "    if subset_filename.exists():\n",
    "        file_size = subset_filename.stat().st_size\n",
    "        original_size = elevation_file.stat().st_size\n",
    "        \n",
    "        print(f\"\\nüìÅ FILE COMPARISON\")\n",
    "        print(f\"Original file: {original_size / 1024:.1f} KB\")\n",
    "        print(f\"Subset file: {file_size / 1024:.1f} KB\")\n",
    "        print(f\"Size reduction: {100 * (1 - file_size/original_size):.1f}%\")\n",
    "        \n",
    "        # Quick verification by reading it back\n",
    "        with rasterio.open(subset_filename) as verify:\n",
    "            print(f\"\\nüîç VERIFICATION\")\n",
    "            print(f\"Saved file dimensions: {verify.width} x {verify.height}\")\n",
    "            print(f\"Saved file bounds: {verify.bounds}\")\n",
    "            print(f\"CRS preserved: {verify.crs == src.crs}\")\n",
    "            \n",
    "            # Check if data matches\n",
    "            saved_data = verify.read(1)\n",
    "            data_matches = np.array_equal(saved_data, subset_data)\n",
    "            print(f\"Data integrity: {'‚úÖ Perfect match' if data_matches else '‚ùå Data differs'}\")"
   ]
