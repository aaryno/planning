    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import rasterio\n",
    "from rasterio.transform import from_bounds, rowcol, xy\n",
    "from rasterio.crs import CRS\n",
    "from rasterio.warp import transform\n",
    "import geopandas as gpd\n",
    "from shapely.geometry import Point, Polygon\n",
    "import pandas as pd\n",
    "from scipy.interpolate import griddata\n",
    "from scipy.ndimage import map_coordinates\n",
    "import tempfile\n",
    "import os\n",
    "from pathlib import Path\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "# Create sample raster data for learning\n",
    "def create_sample_raster_data():\n",
    "    \"\"\"Create a synthetic raster with known spatial patterns.\"\"\"\n",
    "    # Define spatial extent (in a projected coordinate system)\n",
    "    width, height = 200, 150\n",
    "    xmin, ymin, xmax, ymax = 500000, 4000000, 520000, 4015000  # UTM-like coordinates\n",
    "    \n",
    "    # Create coordinate arrays\n",
    "    x = np.linspace(xmin, xmax, width)\n",
    "    y = np.linspace(ymax, ymin, height)  # Note: y decreases (north to south)\n",
    "    X, Y = np.meshgrid(x, y)\n",
    "    \n",
    "    # Create complex spatial pattern (elevation-like)\n",
    "    # Simulate mountain ridges and valleys\n",
    "    elevation = (1000 +  # Base elevation\n",
    "                500 * np.sin((X - 510000) / 5000) * np.cos((Y - 4007500) / 3000) +  # Main ridge\n",
    "                200 * np.sin((X - 505000) / 2000) +  # Secondary ridge\n",
    "                150 * np.cos((Y - 4010000) / 1500) +  # Valley system\n",
    "                50 * np.random.random((height, width)))  # Natural variation\n",
    "    \n",
    "    # Create temperature pattern (inversely related to elevation)\n",
    "    temperature = 25 - (elevation - 1000) * 0.006 + 3 * np.random.random((height, width))\n",
    "    \n",
    "    # Create vegetation index pattern (related to elevation and temperature)\n",
    "    moisture_gradient = np.sin((Y - 4007500) / 8000)  # North-south moisture gradient\n",
    "    ndvi = np.clip(0.1 + 0.4 * moisture_gradient + 0.3 * (1500 - elevation) / 1000 + \n",
    "                   0.1 * np.random.random((height, width)), -0.2, 0.9)\n",
    "    \n",
    "    # Create transform\n",
    "    transform = from_bounds(xmin, ymin, xmax, ymax, width, height)\n",
    "    \n",
    "    return {\n",
    "        'elevation': elevation.astype(np.float32),\n",
    "        'temperature': temperature.astype(np.float32),\n",
    "        'ndvi': ndvi.astype(np.float32),\n",
    "        'transform': transform,\n",
    "        'crs': CRS.from_epsg(32633),  # UTM Zone 33N\n",
    "        'extent': (xmin, ymin, xmax, ymax),\n",
    "        'shape': (height, width)\n",
    "    }\n",
    "\n",
    "# Create sample data\n",
    "raster_data = create_sample_raster_data()\n",
    "\n",
    "# Visualize the sample raster data\n",
    "plt.figure(figsize=(18, 6))\n",
    "\n",
    "extent = raster_data['extent']\n",
    "\n",
    "plt.subplot(1, 3, 1)\n",
