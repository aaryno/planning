    "        plt.imshow(overview_rgb)\n",
    "        ov_width, ov_height = cog_structure['overview_dimensions'][i]\n",
    "        plt.title(f'Overview Level {level}\\n{ov_width} x {ov_height} pixels')\n",
    "        plt.axis('off')\n",
    "\n",
    "# Structure comparison table\n",
    "plt.subplot(2, 3, 4)\n",
